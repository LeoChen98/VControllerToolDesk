<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VControllerToolDesk"
        xmlns:vm="clr-namespace:VControllerToolDesk.ViewModel"
        xmlns:UserControl="clr-namespace:VControllerToolDesk.View.UserControl" x:Class="VControllerToolDesk.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" x:Name="window">
    <Grid>


        <UserControl:RightTopBox HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Tag="{Binding WindowState,ElementName=window}" />


    </Grid>
</Window>
